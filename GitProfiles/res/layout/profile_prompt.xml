<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp" >

    <EditText
        android:id="@+id/prompt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_enter_profile_hint" />

    <ImageButton
        android:id="@+id/prompt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/prompt_text"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/prompt_text"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:contentDescription="@string/blank"
        android:src="@drawable/refresh"
        android:text="@string/blank" />

    <ProgressBar
        android:id="@+id/prompt_progress_circle"
        style="@style/ProgressCircle"
        android:layout_alignBottom="@+id/prompt_text"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/prompt_text"
        android:layout_marginRight="10dp"
        android:visibility="gone" />

</RelativeLayout>